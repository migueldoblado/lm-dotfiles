[user]
	name = {{ .git.name }}
	email = {{ .git.work.email }}
	signingkey = {{ .git.work.signingkey }}
[push]
	default = simple
[pull]
	rebase = merges
[merge]
	ff = false
	tool = meld
[mergetool]
	prompt = false
[commit]
	gpgsign = true
	verbose = true
[init]
	defaultBranch = main
[core]
	hooksPath = /Users/miquel.doblado/.GIS-lm-build/git-hooks
	ignorecase = false
